{% extends '@project-ecommerce/base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Users</th>
                <td>{{ group.users|map(user => user.username)|join(', ') }}</td>
            </tr>
            <tr>
                <th>Privileges</th>
                <td>{{ group.privileges ? group.privileges|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.group.index') }}">back to list</a>

    <a href="{{ path('app.admin.group.edit', {'id': group.id}) }}">edit</a>

    {{ include('@project-ecommerce/administration/admin_group/_delete_form.html.twig') }}
{% endblock %}
