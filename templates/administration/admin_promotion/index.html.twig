{% extends '@project-ecommerce/base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ValidSince</th>
                <th>ValidUntil</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.name }}</td>
                <td>{{ promotion.validSince ? promotion.validSince|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.validUntil ? promotion.validUntil|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.code }}</td>
                <td>
                    <a href="{{ path('app.admin.promotion.show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('app.admin.promotion.edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app.admin.promotion.new') }}">Create new</a>
{% endblock %}
