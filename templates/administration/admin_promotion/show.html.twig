{% extends '@project-ecommerce/base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ promotion.name }}</td>
            </tr>
            <tr>
                <th>ValidSince</th>
                <td>{{ promotion.validSince ? promotion.validSince|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ValidUntil</th>
                <td>{{ promotion.validUntil ? promotion.validUntil|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ promotion.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.promotion.index') }}">back to list</a>

    <a href="{{ path('app.admin.promotion.edit', {'id': promotion.id}) }}">edit</a>

    {{ include('@project-ecommerce/administration/admin_promotion/_delete_form.html.twig') }}
{% endblock %}
