{% extends '@project-ecommerce/base.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administration_user in administration_users %}
            <tr>
                <td>{{ administration_user.id }}</td>
                <td>{{ administration_user.username }}</td>
                <td>
                    <a href="{{ path('app.admin.users.show', {'id': administration_user.id}) }}">show</a>
                    <a href="{{ path('app.admin.users.edit', {'id': administration_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app.admin.users.new') }}">Create new</a>
{% endblock %}
