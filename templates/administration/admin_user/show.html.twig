{% extends '@project-ecommerce/base.html.twig' %}

{% block title %}{{ administration_user.username }}{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ administration_user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ administration_user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ administration_user.roles ? administration_user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ administration_user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app.admin.users.index') }}">back to list</a>

    <a href="{{ path('app.admin.users.edit', {'id': administration_user.id}) }}">edit</a>

    {{ include('@project-ecommerce/administration/admin_user/_delete_form.html.twig') }}
{% endblock %}
